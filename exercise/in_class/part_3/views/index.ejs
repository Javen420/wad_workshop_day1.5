<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>To-Do List (Stage 4)</title>
    <style>
        table {
            border-collapse: collapse;
            width: 60%;
        }
        th, td {
            border: 1px solid black;
            padding: 8px;
        }
        .completed {
            text-decoration: line-through;
            color: gray;
        }
    </style>
</head>
<body>

<h1>To-Do List</h1>

<form action="/add-task" method="POST">
    <label for="taskInput">Task:</label>
    <input
        type="text"
        id="taskInput"
        name="task"
        required
    >
    <button type="submit">Add Task</button>
</form>

<br>

<table>
    <thead>
        <tr>
            <th>Task</th>
            <th>Complete</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% tasks.forEach(task => { %>
            <tr>
                <td class="<%= task.completed ? 'completed' : '' %>">
                    <%= task.text %>
                </td>

                <td>
                    <form action="/toggle-task" method="POST">
                        <input type="hidden" name="id" value="<%= task._id %>">
                        <button type="submit">
                            <%= task.completed ? "Undo" : "Complete" %>
                        </button>
                    </form>
                </td>

                <td>
                    <form action="/delete-task" method="POST">
                        <input type="hidden" name="id" value="<%= task._id %>">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>

</body>
</html>
